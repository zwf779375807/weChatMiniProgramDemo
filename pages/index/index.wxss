page {
  color: #666;
  padding: 5rpx;
}

.nav {
  white-space: nowrap;
  padding: 5rpx 0;
  height: 90rpx;
}

/*隐藏滚动条*/

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.nav_item {
  padding: 20rpx 45rpx;
  font-size: 30rpx;
  display: inline-block;
}

.nav_item.active {
  border-bottom: 5rpx solid red;
}

.swiper {
  margin-top: 10rpx;
}

.swiper swiper {
  height: 220rpx;
}

.swiper navigator {
  width: 100%;
  height: 100%;
}

.swiper navigator image {
  width: 100%;
  height: 100%;
}

.videos{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 20rpx ;
}
.vide_item{
  width: 48%;
  margin-bottom: 20rpx;
}
.video_img{
  position: relative;
}
.video_info{
  position: absolute;
  bottom: 20rpx;
  width: 100%;
  display: flex;
  justify-content: space-around;
  color: #fff;
  font-size: 24rpx;
}

.video_img image{
  width: 100%;
  border-radius: 15rpx;
}
.video_title{
  font-size: 28rpx;
  white-space: normal;
  overflow: hidden;
  display: -webkit-box; 
  text-overflow: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
